.stopwatch {
    height: 100vh;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.stopwatch__timer {
    border: 1px solid grey; 
    padding: 20px 80px;
    margin-bottom: 50px;
}

.stopwatch__timer span {
    font-size: 50px;
}

.stopwatch__buttons button {
    font-size: 20px;
    margin-right: 20px;
}

.stopwatch__buttons button:last-child {
    margin-right: 0;
}